# Example configuration for the Fabricat backend service
# Copy to .env and adjust the values for your environment.

DATABASE_URL=postgresql+psycopg://fabricat:...@localhost:5432/fabricat
API_HOST=0.0.0.0
API_PORT=8000
AUTH_SECRET_KEY=...

# Economic configuration defaults (override as needed for lobbies/sessions)
FABRICAT_ECONOMY_STARTING_CASH=1500000
FABRICAT_ECONOMY_RAW_MATERIAL_STORAGE=120
FABRICAT_ECONOMY_FINISHED_GOODS_STORAGE=120
FABRICAT_ECONOMY_MAX_ACTIVE_FACTORIES=6
FABRICAT_ECONOMY_BASE_LOAN_INTEREST_RATE=0.08
# Use an integer to seed deterministic seniority rolls; omit to randomize each run
FABRICAT_ECONOMY_SENIORITY_SEED=
